<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

	<PropertyGroup>
		<yuzuDeliveryGridContentPath>$(MSBuildThisFileDirectory)..\content\App_Plugins\DocTypeGridEditor\Render\**\*.*</yuzuDeliveryGridContentPath>
	</PropertyGroup>

	<Target Name="CopyYuzuDeliveryUmbracoGridAssets" DependsOnTargets="CopyOurUmbracoDocTypeGridEditorAssets" Condition="'$(TargetFramework)' == 'net5.0'">
		<ItemGroup>
			<yuzuDeliveryGridContentFiles Include="$(yuzuDeliveryGridContentPath)" />
		</ItemGroup>
		<Message Text="Copying Yuzu Delivery Grid files: $(yuzuDeliveryGridContentFiles) - #@(yuzuDeliveryGridContentFiles->Count()) files"  Importance="high" />
		<Copy
            SourceFiles="@(yuzuDeliveryGridContentFiles)"
            DestinationFiles="@(yuzuDeliveryGridContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\DocTypeGridEditor\Render\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

	</Target>

</Project>