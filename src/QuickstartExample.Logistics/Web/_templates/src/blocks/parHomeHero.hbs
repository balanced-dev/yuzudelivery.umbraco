<div class="site-blocks-cover overlay" style="background-image: url({{image.src}});" data-aos="fade"
     data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <h1 class="text-white font-weight-light mb-5 text-uppercase font-weight-bold">{{title}}</h1>
                <p><a href="{{link.href}}" title="{{link.title}}" class="btn btn-primary py-3 px-5 text-white">{{link.label}}</a></p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row align-items-center no-gutters align-items-stretch overlap-section">
        {{#each features}}
            <div class="col-md-4">
                {{#ifCond form.testForm '||' form.liveForm}}
                    <div class="free-quote bg-dark h-100">
                        <h2 class="my-4 heading  text-center">{{title}}</h2>
                        {{> parForm form}}
                    </div>
                {{else}}
                    <div class="feature-1 pricing h-100 text-center">
                        {{#if icon}}
                            <div class="icon">
                                <span class="icon-{{icon}}"></span>
                            </div>
                        {{/if}}
                        <h2 class="my-4 heading">{{title}}</h2>
                        <p>{{text}}</p>
                    </div>
                {{/ifCond}}
            </div>
        {{/each}}
    </div>
</div>