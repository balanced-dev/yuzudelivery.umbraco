<div class="site-section bg-image overlay" style="background-image: url({{image.src}});">
    <div class="container">
        {{#if title}}
            {{{ modPartial 'parSectionHeader' title 'centred' }}}
        {{/if}}
        <div class="row">
            {{#each steps}}
                <div class="col-md-6 col-lg-4 mb-5 mb-lg-0" data-aos="fade" data-aos-delay="100">
                    <div class="how-it-work-item">
                        <span class="number">{{stepNumber}}</span>
                        <div class="how-it-work-body">
                            <h2>{{title}}</h2>
                            <p class="mb-5">{{text}}</p>
                            <ul class="ul-check list-unstyled white">
                                {{#each list}}
                                    <li class="text-white">{{text}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>