<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-7">
            {{#if title}}
                <h2 class="section-title mb-3">{{title}}</h2>
            {{/if}}
            {{#if text}}
                <p class="mb-5">{{text}}</p>
            {{/if}}
            {{#if form}}
                <div data-aos="fade">
                    {{> parForm form }}
                </div>
            {{/if}}
        </div>
    </div>
</div>