<div class="intro-section single-cover" id="home-section">
    <div class="slide-1 " {{#if backgroundImage.src}}style="background-image: url('{{backgroundImage.src}}');" data-stellar-background-ratio="0.5"{{/if}}>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12">
                    <div class="row justify-content-center align-items-center text-center">
                        <div class="col-lg-6">
                            <h1 data-aos="fade-up" data-aos-delay="0">{{title}}</h1>
                            {{#if subTitles.[0]}}
                                <p data-aos="fade-up" data-aos-delay="100">
                                    {{#each subTitles}}
                                        {{#if link.label}}
                                            <a class="text-white" href="{{link.href}}" title="{{link.title}}">{{link.label}}</a>
                                        {{else if text}}
                                            {{text}}
                                        {{/if}}
                                        {{#unless @last}}
                                            &bullet; 
                                        {{/unless}}
                                    {{/each}}
                                </p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>