<div class="intro-section" id="home-section">
    <div class="slide-1"{{#if backgroundImage.src}} style="background-image: url('{{backgroundImage.src}}');" data-stellar-background-ratio="0.5"{{/if}}>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12">
                    <div class="row align-items-center">
                        <div class="col-lg-6 mb-4">
                            {{#if title}}
                                <h1 data-aos="fade-up" data-aos-delay="100">{{title}}</h1>
                            {{/if}}
                            {{#if text}}
                                <p class="mb-4" data-aos="fade-up" data-aos-delay="200">{{text}}</p>                                
                            {{/if}}
                            {{#if links.[0]}}
                                <p data-aos="fade-up" data-aos-delay="300">
                                    {{#each links}}
                                        <a class="btn btn-primary py-3 px-5 btn-pill" href="{{href}}" title="{{title}}">{{label}}</a>
                                    {{/each}}
                                </p>
                            {{/if}}
                        </div>
                        <div class="col-lg-5 ml-auto" data-aos="fade-up" data-aos-delay="500">
                            {{#if signupForm.form}}
                                <div class="form-box">
                                    {{#if signupForm.title}}
                                        <h3 class="h4 text-black mb-4">{{signupForm.title}}</h3>
                                    {{/if}}
                                    {{> parForm signupForm.form }}
                                </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>