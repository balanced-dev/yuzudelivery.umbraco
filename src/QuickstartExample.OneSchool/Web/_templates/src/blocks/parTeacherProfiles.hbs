<script type="x-template" id="teacher-profiles-component">
    <div class="container" data-initial='{{{toString this}}}'>
        <div class="row" v-for="teachers in rows">
            <div class="col-md-6 col-lg-4 mt-5 mb-4" v-for="(teacher, index) in teachers" v-bind:key="index" data-aos="fade-up" :data-aos-delay="(index + 1) + '00'">
                <div class="teacher text-center">
                    <template v-if="teacher.headshot">
                        <img class="img-fluid  w-50 rounded-circle mx-auto mb-4" :src="teacher.headshot.src" :alt="teacher.headshot.alt"/>
                    </template>
                    <div class="py-2">
                        <template v-if="teacher.name">
                            <h3 class="text-black">
                                \{{teacher.teacherName}}
                            </h3>
                        </template>             
                        <template v-if="teacher.position">
                            <p class="position">
                                \{{teacher.position}}
                            </p>
                        </template>             
                        <template v-if="teacher.text">
                            <p>\{{teacher.text}}</p>
                        </template>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-5 justify-content-center">
            <button class="btn btn-primary btn-pill" v-if="endpoint" v-on:click="fetchNextPage">
                View more teachers
            </button>
        </div>
    </div>    
</script>

<div id="teacher-profiles-app">
    <teacher-profiles></teacher-profiles>
</div>

