<label class="{{_modifiers.[0]}}__select">
	<span class="{{_modifiers.[0]}}__select__label">{{label}}</span>
	<div class="{{_modifiers.[0]}}__select__input">
		<select class="{{_modifiers.[0]}}__select__control" 
			{{#if id}}id="{{id}}"{{/if}} 
			{{#if name}}name="{{name}}"{{/if}} 

			{{#if isRequired}}required="required"{{/if}}
			{{#if requiredMessage}}data-msg-required="{{requiredMessage}}"{{/if}}

			{{#if isDisabled}}disabled="disabled"{{/if}}

			data-bouncer-target="#{{#if id}}{{id}}{{else}}{{name}}{{/if}}-error"
		>
			{{#each options}}
				<option {{#ifCond ../isReadonly '||' isDisabled}} disabled="disabled"{{/ifCond}}{{#if isSelected}} selected="selected"{{/if}} value="{{value}}">{{label}}</option>
			{{/each}}
		</select>
		<span class="{{_modifiers.[0]}}__select__faux"></span>
	</div>
	<div id="{{#if id}}{{id}}{{else}}{{name}}{{/if}}-error"></div>
</label>
